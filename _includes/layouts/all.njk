{% include "head.njk" %}
{% include "header.njk" %}

{% for post in posts %}
  {% set individualPost = false %}
  {% include "post-contents.njk" %}
{% endfor %}

<!-- PAGINATION -->
<nav class="pagination" aria-label="pagination">
  {% if pagination.href.next %}
    <a class="pagination__older" href="{{ pagination.href.next | url }}" title="Older posts">
      <svg viewBox="0 0 30 30" width="30" height="30">
        <use xlink:href="#older"></use>
      </svg>
    </a>
  {% endif %}
  {% if pagination.href.previous %}
    <a class="pagination__newer" href="{{ pagination.href.previous | url }}" title="Newer posts">
      <svg viewBox="0 0 30 30" width="30" height="30">
        <use xlink:href="#newer"></use>
      </svg>
    </a>
  {% endif %}
</nav>


{% include "footer.njk" %}